<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="in.lubble.app.chat.GroupQuesBottomSheetDialogFrag">

    <!--Empty view to make the sheet full screen-->
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/rounded_rect_gray"
        android:layout_width="56dp"
        android:tint="@color/black"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/tv_answer_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/iv_cross"
        android:text="Answer this to join"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:id="@+id/container_ques"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_answer_this"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_account_no_padding" />

        <LinearLayout
            android:id="@+id/frame_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/iv_dp"
            android:background="@drawable/chat_bubble_border"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Ready to join? Which gym do you go to?" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_answer_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_ques"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="This will be your first message on this group" />

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_answer_hint"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/chat_bubble_border"
        android:gravity="top|left"
        android:hint="Answer Publicly"
        android:maxLines="5"
        android:padding="11dp"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/iv_send_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/et_answer"
        android:layout_marginRight="8dp"
        android:background="@drawable/blue_circle"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_send_white_24dp" />

</RelativeLayout>
