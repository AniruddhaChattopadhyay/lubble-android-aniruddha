<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_account_no_padding" />

        <LinearLayout
            android:id="@+id/frame_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/iv_dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubble_border"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/full_names" />

                <RelativeLayout
                    android:id="@+id/relativelayout_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.youtube.player.YouTubeThumbnailView
                        android:id="@+id/youtube_thumbnail_view"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />

                    <FrameLayout
                        android:id="@+id/youtube_frag"
                        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/link_meta_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/sent_chat_bubble_border"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/tv_link_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="LINK TITLE"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_link_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Link description" />

                </LinearLayout>

                <in.lubble.app.utils.MsgFlexBoxLayout
                    android:id="@+id/msgFlexBox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:viewPartMain="@+id/msg_content_container"
                    app:viewPartSlave="@+id/msg_status_container">

                    <LinearLayout
                        android:id="@+id/msg_content_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/img_container"
                            android:layout_width="wrap_content"
                            android:layout_height="240dp"
                            android:layout_marginBottom="8dp"
                            android:minWidth="240dp"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <ProgressBar
                                android:id="@+id/progressbar_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                            <ImageView
                                android:id="@+id/iv_chat_img"
                                android:layout_width="wrap_content"
                                android:layout_height="240dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:minWidth="240dp"
                                android:scaleType="centerCrop"
                                android:transitionName="fullscreen_image"
                                tools:src="@tools:sample/backgrounds/scenic" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:text="Pikachu! I choose you!" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/msg_status_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="right"
                        android:minWidth="60dp">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="4dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:textSize="12sp"
                            tools:text="14:23pm" />

                        <!--<include
                            android:id="@+id/msg_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="5dp"
                            android:minWidth="40dp"
                            android:visibility="gone" />-->

                    </LinearLayout>

                </in.lubble.app.utils.MsgFlexBoxLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_lubb_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame_msg"
                android:layout_alignRight="@id/frame_msg"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_lubb"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_favorite_border_24dp" />

                <TextView
                    android:id="@+id/tv_lubb_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    tools:text="3" />

                <LinearLayout
                    android:id="@+id/linear_layout_lubb_heads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_lubb_hint_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_lubb_hint"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_favorite_border_24dp" />

                <TextView
                    android:id="@+id/tv_any_lubb_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="1"
                    android:orientation="horizontal"
                    android:singleLine="true"
                    android:text="@string/like_any_msg_hint"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_lubb_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="18dp"
        android:background="@drawable/like_pill_button_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_lubb_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:tint="@color/bright_red"
            app:srcCompat="@drawable/ic_favorite_border_24dp" />

        <TextView
            android:id="@+id/tv_lubb_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/like"
            android:textColor="@color/black" />

    </LinearLayout>

</FrameLayout>