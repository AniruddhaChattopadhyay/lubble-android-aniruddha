<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/feed_author_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/feed_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="Ramesh Singh" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/feed_author_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_right_alt_24"
        tools:text="QnAs" />

    <TextView
        android:id="@+id/feed_post_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_name"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="1hr ago" />

    <ImageView
        android:id="@+id/iv_more_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-8dp"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <TextView
        android:id="@+id/feed_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_photo"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="9"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/feed_photo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_text_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_like_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23 Likes"
        app:drawableLeftCompat="@drawable/ic_favorite_16dp"
        android:layout_below="@id/feed_photo_content"
        android:drawablePadding="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/separator_social"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_like_stats"
        app:srcCompat="@color/md_grey_300"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/social_layout"
        android:layout_below="@id/separator_social"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cont_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_imageview"
                app:srcCompat="@drawable/ic_favorite_border_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Like"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_reply_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Reply"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_share_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_section_layout"
        android:orientation="vertical"
        android:layout_below="@+id/social_layout"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comment_post_btn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:theme="@style/MaterialButton"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/ic_send_white_24dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/comment_post_btn"
            android:id="@+id/comment_edit_text"
            android:hint="write your comments here"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_edit_text"
            android:id="@+id/comment_recycler_view"
            />
    </RelativeLayout>

</RelativeLayout>