<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.lubble.app.lubble_info.LubbleActivity"
    tools:showIn="@layout/activity_lubble">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lubble_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/black"
            tools:text="@tools:sample/lorem/random" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_notice_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/half_rounded_rectangle_hollow_top"
                android:padding="16dp"
                android:text="@string/notice_board"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_notice_board"
                android:layout_alignRight="@id/tv_notice_board"
                android:layout_alignTop="@id/tv_notice_board"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:tint="@color/dark_gray"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_domestic_directory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/half_rounded_rectangle_hollow_bottom"
                android:padding="16dp"
                android:text="Domestic Help Directory"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_domestic_directory"
                android:layout_alignRight="@id/tv_domestic_directory"
                android:layout_alignTop="@id/tv_domestic_directory"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:tint="@color/dark_gray"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
