<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="64dp"
        android:gravity="right">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/mute_green"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/link_meta_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/mute_green_dark"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv_link_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"
                        tools:text="LINK TITLE" />

                    <TextView
                        android:id="@+id/tv_link_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        tools:text="Link description" />

                </LinearLayout>

                <in.lubble.app.utils.MsgFlexBoxLayout
                    android:id="@+id/msgFlexBox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:viewPartMain="@+id/msg_content_container"
                    app:viewPartSlave="@+id/msg_status_container">

                    <RelativeLayout
                        android:id="@+id/msg_content_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/img_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minWidth="240dp"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <ProgressBar
                                android:id="@+id/progressbar_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                            <ImageView
                                android:id="@+id/iv_chat_img"
                                android:layout_width="match_parent"
                                android:layout_height="240dp"
                                android:layout_marginBottom="4dp"
                                android:minWidth="240dp"
                                android:scaleType="centerCrop"
                                android:transitionName="fullscreen_image"
                                tools:src="@tools:sample/backgrounds/scenic" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_container"
                            android:autoLink="web"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:text="P!" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/msg_status_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="right"
                        android:minWidth="60dp">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="4dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:textSize="12sp"
                            tools:text="14:23pm" />

                        <!--<include
                            android:id="@+id/msg_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="5dp"
                            android:minWidth="40dp"
                            android:visibility="gone" />-->

                    </LinearLayout>

                </in.lubble.app.utils.MsgFlexBoxLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_lubb_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_lubb"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/ic_favorite_border_24dp" />

                    <TextView
                        android:id="@+id/tv_lubb_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        tools:text="3" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>