        android:background="@drawable/circle_white"
        app:backgroundTint="@color/lt_gold"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

</FrameLayout>