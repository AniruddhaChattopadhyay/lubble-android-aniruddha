<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/feed_author_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_account_circle_black_no_padding" />

    <TextView
        android:id="@+id/feed_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="Ramesh Singh" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/feed_author_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_right_alt_24"
        tools:text="QnAs" />

    <TextView
        android:id="@+id/feed_post_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_name"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="1hr ago" />

    <ImageView
        android:id="@+id/iv_more_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-8dp"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <TextView
        android:id="@+id/feed_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_photo"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        tools:maxLines="10"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/feed_photo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_text_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/container_reaction_stats"
        android:layout_width="match_parent"
        android:layout_below="@id/feed_photo_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_like_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:visibility="gone"
            app:drawableLeftCompat="@drawable/ic_favorite_16dp"
            tools:text="23 Likes"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_reply_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:visibility="gone"
            app:drawableLeftCompat="@drawable/ic_reply_black_16dp"
            app:drawableTint="@color/md_grey_600"
            tools:text="9 replies"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/separator_social"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container_reaction_stats"
        android:layout_marginTop="8dp"
        app:srcCompat="@color/md_grey_300" />

    <LinearLayout
        android:id="@+id/social_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_social"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cont_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Like"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_reply_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Reply"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_share_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/separator_social_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/social_layout"
        android:layout_marginTop="8dp"
        app:srcCompat="@color/md_grey_300" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_social_bottom"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingBottom="32dp"
        android:visibility="gone"
        tools:itemCount="2"
        tools:listitem="@layout/post_expanded_comment_row"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/comment_post_btn"
        android:background="@color/white"
        android:drawablePadding="4dp"
        android:hint="Add a reply..."
        android:paddingTop="8dp"
        app:drawableLeftCompat="@drawable/ic_account_circle_grey_24dp" />

    <ImageView
        android:id="@+id/comment_post_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/comment_edit_text"
        android:layout_alignBottom="@id/comment_edit_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/ic_send_white_24dp"
        app:tint="@color/colorAccent" />

</RelativeLayout>