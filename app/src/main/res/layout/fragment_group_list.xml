<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_group_pic"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginRight="8dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_group_pic"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_join_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Join" />

    <TextView
        android:id="@+id/tv_reject_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_join_group"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_join_group"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Reject"
        android:textColor="@color/red"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toLeftOf="@id/btn_join_group"
        android:layout_toRightOf="@id/iv_group_pic"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/default_text_color"
        tools:text="@tools:sample/lorem/random" />

</RelativeLayout>