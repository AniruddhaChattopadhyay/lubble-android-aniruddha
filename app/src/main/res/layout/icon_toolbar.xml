<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/icon_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    app:contentInsetStartWithNavigation="0dp"
    app:elevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-16dp">

        <RelativeLayout
            android:id="@+id/container_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_toolbar"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="8dp"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_lock_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignRight="@id/iv_toolbar"
                android:layout_alignBottom="@id/iv_toolbar"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_white"
                android:padding="2dp"
                android:tint="@color/dark_gray"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_lock_black_24dp"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/tv_add_friends"
            android:layout_toRightOf="@id/container_dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Group Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_invite_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:marqueeRepeatLimit="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Click here to view group info"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:text="Add Friends"
            android:textColor="@color/black"
            app:drawableTint="@color/black"
            app:drawableTopCompat="@drawable/ic_person_add_24dp" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>