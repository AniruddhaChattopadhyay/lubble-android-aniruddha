<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <me.crosswall.lib.coverflow.core.PagerContainer
                android:id="@+id/pager_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:elevation="7dp"
                    tools:background="@color/gray" />

            </me.crosswall.lib.coverflow.core.PagerContainer>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_dots"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_alignBottom="@id/pager_container"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingEnd="8dp"
                app:tabPaddingStart="8dp" />

            <ProgressBar
                android:id="@+id/progressBar_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pager_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_search_no_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No groups found. You can create a new one!"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:padding="8dp"
                android:layout_below="@id/pager_container"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_groups"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_below="@id/pager_container"
                tools:context="in.lubble.app.groups.GroupListFragment"
                tools:listitem="@layout/fragment_group_list" />

            <LinearLayout
                android:id="@+id/container_explore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_groups"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/interest_banner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Explore Interesting Groups\nin your neighbourhood"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <Button
                    android:id="@+id/btn_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Let's Explore!"
                    android:theme="@style/PinkButton" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/container_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pill_button"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_anchor="@id/container_scrollview"
        app:layout_anchorGravity="bottom|right|end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="New Public/Pvt Group"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>