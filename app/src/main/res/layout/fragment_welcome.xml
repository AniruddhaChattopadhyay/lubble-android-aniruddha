<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="LOG IN / SIGN UP"
        android:theme="@style/AccentButton" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/city" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_lubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        android:alpha="0.9"
        android:fontFamily="@font/molle_regular"
        android:text="Lubble"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lubble"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:text="The Private Local Social Network"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_referrer_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/referrer_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="You were referred by"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/referrer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_referrer_dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_referrer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textColor="@color/white"
            tools:text="Pikachu" />

    </LinearLayout>

</RelativeLayout>
