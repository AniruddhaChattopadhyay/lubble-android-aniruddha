<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:elevation="7dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_rect_gray" />

    <View
        android:id="@+id/view_white"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/rect_rounded_white" />

    <View
        android:id="@+id/view-line1"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/view_white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_gray" />

    <View
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_below="@id/view-line1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray" />

</RelativeLayout>