<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.AddPostForFeed">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/post_edt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter what you want to post">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minHeight="300dp"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the group name of the post"
            android:layout_below="@+id/post_edt_txt"
            android:id="@+id/group_name_add_post"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_btn"
            android:layout_below="@+id/group_name_add_post"
            android:layout_centerInParent="true"
            android:text="post"/>

</RelativeLayout>