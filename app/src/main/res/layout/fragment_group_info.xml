<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="in.lubble.app.groups.group_info.GroupInfoFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="248dp">

        <ImageView
            android:id="@+id/iv_group_image"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_gravity="center"
            android:background="@color/very_light_gray"
            android:scaleType="centerCrop"
            android:transitionName="nahi_chaiye"
            app:srcCompat="@drawable/circle" />

        <ProgressBar
            android:id="@+id/progressBar_groupInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tv_group_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_group_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tv_leave_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="Leave Group"
            android:textColor="@color/dk_red"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mute_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/light_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/view1"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:text="Mute Notifications"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_mute"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view1"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/linearLayout_invite_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tint="@color/dk_colorAccent"
            app:srcCompat="@drawable/ic_person_add_24dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="Invite Members from Saraswati Vihar"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/dk_colorAccent" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_members"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_icon_text" />

</LinearLayout>
