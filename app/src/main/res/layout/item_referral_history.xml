<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rect_rounded_border"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_referral_pic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_referral_pic"
        android:layout_alignTop="@id/iv_referral_pic"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/iv_referral_pic"
        android:gravity="center"
        android:text="Santa Claus"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <ImageView
        android:id="@+id/iv_joined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="8dp"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/tv_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_joined"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/iv_joined"
        android:text="Joined"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/iv_seller"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/iv_joined"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/tv_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_seller"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/iv_seller"
        android:text="Became a seller"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_point_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_point_count"
            android:text="Points" />

    </LinearLayout>

</RelativeLayout>