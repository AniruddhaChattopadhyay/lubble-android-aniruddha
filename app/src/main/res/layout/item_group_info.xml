<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Lubble also has Private Groups️ \uD83D\uDD75"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_info_title"
        android:layout_below="@id/tv_info_title"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:breakStrategy="simple"
        android:text="They are only visible when you are invited to them\n\nPrivate Groups have a lock icon on their group photo"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_info_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:clickable="true"
        android:layout_below="@id/textView2"
        android:layout_alignParentRight="true"
        android:text="OKAY"
        android:textColor="@color/white" />

</RelativeLayout>