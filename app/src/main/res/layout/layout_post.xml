<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/feed_list_row">

    <ImageView
        android:id="@+id/feed_author_photo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_account_circle_black_no_padding" />

    <TextView
        android:id="@+id/feed_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="Ramesh Singh" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/feed_author_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_right_alt_24"
        tools:text="QnAs" />

    <TextView
        android:id="@+id/tv_lubble_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_name"
        android:layout_toRightOf="@+id/feed_author_photo"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Koramangala" />

    <ImageView
        android:id="@+id/iv_more_menu"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@id/tv_group_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-8dp"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <TextView
        android:id="@+id/feed_post_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_group_name"
        android:layout_alignBottom="@id/tv_group_name"
        android:layout_toLeftOf="@id/iv_more_menu"
        android:layout_toRightOf="@id/tv_group_name"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="1hr ago" />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/feed_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_author_photo"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="9"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        tools:maxLines="3"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <include
        layout="@layout/layout_feed_link_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_text_content"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/feed_photo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cont_link_preview"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:foreground="?attr/selectableItemBackground"
        android:maxHeight="500dp"
        android:transitionName="fullscreen_image"
        android:visibility="gone"
        android:scaleType="centerCrop"
        tools:src="@drawable/explore_default"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/container_reaction_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_photo_content"
        android:gravity="right"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_like_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="12sp"
            app:drawableLeftCompat="@drawable/ic_favorite_16dp"
            tools:text="23 Likes"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_reply_stats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableLeftCompat="@drawable/ic_reply_black_16dp"
            app:drawableTint="@color/md_grey_600"
            tools:text="9 replies"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/separator_social"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container_reaction_stats"
        android:layout_marginTop="4dp"
        app:srcCompat="@color/md_grey_300" />

    <LinearLayout
        android:id="@+id/social_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_social"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cont_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Like" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_reply_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Reply"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_share_black_24dp"
                app:tint="@color/md_grey_600" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Share" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/separator_social_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/social_layout"
        android:layout_marginTop="4dp"
        app:srcCompat="@color/md_grey_300" />
</merge>