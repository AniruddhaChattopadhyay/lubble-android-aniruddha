<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <!--For Blue Status Bar in some activities-->
    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="timeTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AccentButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="TransparentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextOnDark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="LubbleTooltipStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">@color/darker_gray</item>
        <item name="android:textAppearance">@style/TextOnDark</item>
    </style>

    <style name="BigRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dark_gold</item>
        <item name="colorControlActivated">@color/dark_gold</item>
    </style>

    <style name="SmallRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/dark_gold</item>
    </style>


</resources>
